#cloud-config
users:
  - name: arunt
    ssh-authorized-keys:
      - ssh-rsa  arunt@sesame
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    shell: /bin/bash
  - name: ubuntu
    ssh-authorized-keys:
      - ssh-rsa  arunt@sesame
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    shell: /bin/bash
runcmd:
  - bash -c 'echo "Acquire::http::Proxy \"http://16.85.88.10:8080\";" > /etc/apt/apt.conf.d/30proxy';
